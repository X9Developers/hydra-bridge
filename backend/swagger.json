{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Hydra Bridge",
    "description": "Hydra Bridge API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "basePath": "/api",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],

  "paths": {
    "/approval/check-allowance": {
      "get": {
        "tags": ["Allowances"],
        "summary": "Check allowance for user",
        "parameters": [
          {
            "name": "chainId",
            "in": "query",
            "description": "Chain id to bridge",
            "required": "true",
            "enum": ["goerli", "polygonMumbai"]
          },
          {
            "name": "owner",
            "in": "query",
            "description": "Owner of address that checks allowance",
            "required": "true"
          },
          {
            "name": "spender",
            "in": "query",
            "description": "Spender contract address",
            "required": "true"
          },
          {
            "name": "tokenAddress",
            "in": "query",
            "description": "Token address of tokens to spend",
            "required": "true"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/AllowanceDto"
            }
          }
        }
      }
    },
    "/approval/build-tx": {
      "get": {
        "tags": ["Allowances"],
        "summary": "Build transaction for asset allowance",
        "parameters": [
          {
            "name": "chainId",
            "in": "query",
            "description": "Chain id to bridge",
            "required": "true",
            "enum": ["goerli", "polygonMumbai"]
          },
          {
            "name": "owner",
            "in": "query",
            "description": "Owner of address that checks allowance",
            "required": "true"
          },
          {
            "name": "spender",
            "in": "query",
            "description": "Spender contract address",
            "required": "true"
          },
          {
            "name": "tokenAddress",
            "in": "query",
            "description": "Token address of tokens to spend",
            "required": "true"
          },
          {
            "name": "amount",
            "in": "query",
            "description": "Amount to transfer",
            "required": "true"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/BuildAllowanceResponseDto"
            }
          }
        }
      }
    },
    "/bridge/build-tx": {
      "get": {
        "tags": ["Bridge"],
        "summary": "Build transaction for bridging assets",
        "parameters": [
          {
            "name": "recipient",
            "in": "query",
            "description": "Recipient of bridged assets",
            "required": "true"
          },
          {
            "name": "fromAsset",
            "in": "query",
            "description": "Asset from who we bridge",
            "required": "true",
            "enum": ["eth", "usdc"]
          },
          {
            "name": "fromChainId",
            "in": "query",
            "description": "Chain from who we bridge",
            "required": "true",
            "enum": ["goerli", "polygonMumbai"]
          },
          {
            "name": "toAsset",
            "in": "query",
            "description": "Asset to who we bridge",
            "required": "true",
            "enum": ["eth", "usdc"]
          },
          {
            "name": "toChainId",
            "in": "query",
            "description": "Chain to who we bridge",
            "required": "true",
            "enum": ["goerli", "polygonMumbai"]
          },
          {
            "name": "amount",
            "in": "query",
            "description": "Amount to transfer",
            "required": "true"
          },
          {
            "name": "routeId",
            "in": "query",
            "description": "ID of transfer route",
            "required": "true",
            "enum": ["polygon", "hop"]
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/BuildTxResponseDto"
            }
          }
        }
      }
    },
    "/bridge/quote": {
      "get": {
        "tags": ["Bridge"],
        "summary": "Get quote for bridge routes",
        "parameters": [
          {
            "name": "fromAsset",
            "in": "query",
            "description": "Asset from who we bridge",
            "required": "true",
            "enum": ["eth", "usdc"]
          },
          {
            "name": "fromChainId",
            "in": "query",
            "description": "Chain from who we bridge",
            "required": "true",
            "enum": ["goerli", "polygonMumbai"]
          },
          {
            "name": "toAsset",
            "in": "query",
            "description": "Asset to who we bridge",
            "required": "true",
            "enum": ["eth", "usdc"]
          },
          {
            "name": "toChainId",
            "in": "query",
            "description": "Chain to who we bridge",
            "required": "true",
            "enum": ["goerli", "polygonMumbai"]
          },
          {
            "name": "amount",
            "in": "query",
            "description": "Amount to transfer",
            "required": "true"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/QuotesDto"
              }
            }
          }
        }
      }
    },
    "/common/tokens": {
      "get": {
        "tags": ["Common"],
        "summary": "Get tokens for transfering",
        "parameters": [
          {
            "name": "chainId",
            "in": "query",
            "description": "Official chainId of chain we are transfering from",
            "required": "true"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/TokensResponseDto"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "AllowanceDto": {
      "properties": {
        "value": {
          "type": "string"
        },
        "tokenAddress": {
          "type": "string"
        }
      }
    },
    "BuildAllowanceRequestDto": {
      "properties": {
        "chainId": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        },
        "spender": {
          "type": "string"
        },
        "tokkenAddress": {
          "type": "string"
        },
        "amount": {
          "type": "string"
        }
      }
    },
    "BuildAllowanceResponseDto": {
      "properties": {
        "data": {
          "type": "string"
        },
        "to": {
          "type": "string"
        },
        "from": {
          "type": "string"
        }
      }
    },
    "BuildTxRequestDto": {
      "required": [
        "recipient",
        "fromAsset",
        "fromChainId",
        "toAsset",
        "toChainId",
        "amount"
      ],
      "properties": {
        "recipient": {
          "type": "string"
        },
        "fromAsset": {
          "type": "string"
        },
        "fromChainId": {
          "type": "string"
        },
        "toAsset": {
          "type": "string"
        },
        "toChainId": {
          "type": "string"
        },
        "amount": {
          "type": "string"
        }
      }
    },

    "BuildTxResponseDto": {
      "properties": {
        "data": {
          "type": "string"
        },
        "to": {
          "type": "string"
        },
        "from": {
          "type": "string"
        },
        "value": {
          "type": "string"
        },
        "bridgeId": {
          "type": "string"
        }
      }
    },
    "QuoteRequestDto": {
      "required": [
        "fromAsset",
        "fromChainId",
        "toAsset",
        "toChainId",
        "amount"
      ],
      "properties": {
        "fromAsset": {
          "type": "string"
        },
        "fromChainId": {
          "type": "string"
        },
        "toAsset": {
          "type": "string"
        },
        "toChainId": {
          "type": "string"
        },
        "amount": {
          "type": "string"
        }
      }
    },

    "QuoteResponseDto": {
      "properties": {
        "fromAsset": {
          "type": "string"
        },
        "fromChainId": {
          "type": "string"
        },
        "toAsset": {
          "type": "string"
        },
        "toChainId": {
          "type": "string"
        },
        "amountIn": {
          "type": "string"
        },
        "amountOut": {
          "type": "string"
        },
        "allowanceTarget": {
          "type": "string"
        },
        "isApproveRequired": {
          "type": "boolean"
        },
        "routeId": {
          "type": "string"
        }
      }
    },
    "QuotesDto": {
      "type": "array",
      "$ref": "#/definitions/QuoteResponseDto"
    },
    "TokensResponseDto": {
      "properties": {
        "success": {
          "type": "boolean"
        },
        "results": {
          "type": "array",
          "$ref": "#/definitions/TokenResponseDto"
        }
      }
    },
    "TokenResponseDto": {
      "properties": {
        "id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "chainId": {
          "type": "number"
        },
        "decimals": {
          "type": "number"
        },
        "symbol": {
          "type": "string"
        }
      }
    }
  },

  "apis": ["api/routes/index.ts"]
}
